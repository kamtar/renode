{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "program": "${config:workspacePointer}/output/bin/Debug/Renode.dll",
            "cwd": "${config:workspacePointer}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Mono Launch - Debug",
            "preLaunchTask": "Mono Build - Debug",
            "type": "mono",
            "request": "launch",
            "program": "${config:workspacePointer}/output/bin/Debug/Renode.exe",
            "cwd": "${config:workspacePointer}",
        },
        {
            "name": "Mono Launch - Release",
            "preLaunchTask": "Mono Build - Release",
            "type": "mono",
            "request": "launch",
            "program": "${config:workspacePointer}/output/bin/Release/Renode.exe",
            "cwd": "${config:workspacePointer}"
        },
        {
            "name": "Mono Attach",
            "internalConsoleOptions": "openOnSessionStart",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        },
        {
            "name": "(gdb) Tlib Attach",
            "type": "cppdbg",
            "request": "attach",
            // When attaching to Mono process (as opposed to .NET), change Renode.dll to Renode.exe
            "program": "${config:workspacePointer}/output/bin/Debug/Renode.dll",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set breakpoint pending on"
                },
                {
                    // When attaching to Mono process, add these signals:
                    // (https://www.mono-project.com/docs/debug+profile/debug/)
                    // SIGXCPU SIG33 SIG35 SIG36 SIG37 SIGPWR
                    "text": "handle SIG34 nostop noprint"
                },
                {
                    "text": "set architecture i386:x86-64"
                }
            ]
        }
    ]
}
